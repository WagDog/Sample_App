<!-- This is called a 'Partial' and must be named with a leading underscore -->
<!-- Partials are called like this:- render 'layouts/footer' -->
<header class="navbar navbar-inverse navbar-fixed-top">
  <div class="navbar-inner">
    <div class="container">
      <%= link_to "sample app", '#', id: "logo"%>
        <ul class="navbar-nav navbar-right">
          <li><a href="/"><span class="glyphicon glyphicon-home"></span> Home</a></li>
          <li><a href="/help"><span class="glyphicon glyphicon-info-sign"></span> Help</a></li>
          <% if signed_in? %>
              <li><%= link_to "Users", '#' %></li>
              <li id="fat-menu" class="dropdown"><a href ="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false">Account<b class="caret"></b></a>
                <ul class="dropdown-menu">
                  <li><%= link_to "Profile", current_user %></li>
                  <li><%= link_to "Settings", edit_user_path(current_user) %></li>
                  <li class="divider"></li>
                  <li><%= link_to "Sign out", signout_path, method: "delete"%></li>
                </ul>
              </li>
        <% else %>
            <li><a href="signin"><span class="glyphicon glyphicon-log-in"></span> Sign In</a></li>
          <% end %>
        </ul>
    </div>
  </div>
</header>