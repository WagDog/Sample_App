<% provide(:title, 'Sign in') %>
<h1>Sign in</h1>

<div class="row">
  <div class="span12">
    <%= form_for(:session, url: sessions_path) do |f| %>
        <div class="col-md-4 col-md-offset-4"><%= f.label :email %></div>
        <div class="col-md-4 col-md-offset-4"><%= f.text_field :email %></div>
        <div class="col-md-4 col-md-offset-4"><%= f.label :password %></div>
        <div class="col-md-4 col-md-offset-4"><%= f.password_field :password %></div>
        <div class="col-md-2 col-md-offset-5"><%= f.submit 'Sign in', class: 'btn btn-lg btn-primary' %></div>
        <div class="col-md-2 col-md-offset-5">New user? <%= link_to 'Sign up now!', signup_path %></div>
    <% end %>
  </div>
</div>


