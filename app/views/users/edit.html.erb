<% provide(:title, 'Edit user') %>
<h1>Update your profile</h1>

<div class ="row">
    <%= form_for(@user) do | f |%>
    <%= render 'shared/error_messages'%>
    <div class="col-md-4 col-md-offset-4"><%= f.label :name%></div>
    <div class="col-md-4 col-md-offset-4"><%= f.text_field :name%></div>
    <div class="col-md-4 col-md-offset-4"><%= f.label :email%></div>
    <div class="col-md-4 col-md-offset-4"><%= f.text_field :email%></div>
    <div class="col-md-4 col-md-offset-4"><%= f.label :password%></div>
    <div class="col-md-4 col-md-offset-4"><%= f.password_field :password%></div>
    <div class="col-md-4 col-md-offset-4"><%= f.label :password_confirmation, "Confirmation"%></div>
    <div class="col-md-4 col-md-offset-4"><%= f.password_field :password_confirmation%></div>
    <div class="col-md-2 col-md-offset-5"><%= f.submit "Save changes", class: "btn btn-lg btn-primary"%></div>
    <% end %>
</div>
<div class ="row"><br /></div>
<div class="panel panel-info col-md-6 col-md-offset-3">
  <div class="panel-heading">Gravatar Image</div>
    <div class="panel-content">
      <div class ="row">
        <div class="col-md-offset-2"><%= gravatar_for @user%>
         <a href="http://gravatar.com/emails">Change</a></div>
        </div>
      </div>
    </div>
  </div>
</div>